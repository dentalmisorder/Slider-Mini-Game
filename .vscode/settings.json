{
    "todohighlight.keywords": [
        "DEBUG:",
        "REVIEW:",
        {
            "text": "BUG:",
            "color": "#000000",
            "backgroundColor": "magenta",
            "overviewRulerColor": "grey",
            "isWholeLine": true,
        },
        {
            "text": "NOTE:",
